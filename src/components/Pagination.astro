---
import { Icon } from "astro-icon/components";

const { currentPage, totalPages, disablePrevious, disableNext } = Astro.props;

interface PaginationProps {
  currentPage: number;
  totalPages: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---

<div class="flex justify-between mt-10">
  <a 
    href={"/articles?page=" + (currentPage - 1)} 
    class={disablePrevious ? "flex gap-1 text-gray-400 bg-gray-100 border border-gray-200 px-3 py-2 rounded-lg pointer-events-none select-none" : "flex gap-1 bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white transition-colors duration-200 rounded-lg select-none"}
  >
    <Icon name="mdi:chevron-left" size={25} />
    Previous
  </a>
  <a 
    href={"/articles?page=" + (currentPage + 1)}
    class={disableNext ? "flex gap-1 text-gray-400 bg-gray-100 border border-gray-200 px-3 py-2 rounded-lg pointer-events-none select-none" : "flex gap-1 bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white transition-colors duration-200 rounded-lg select-none"}
  >
    Next
    <Icon name="mdi:chevron-right" size={25} />
  </a>
</div>
