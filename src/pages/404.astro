---
import MainLayout from '../layouts/MainLayout.astro'
import { Image } from 'astro:assets'
import error from '../images/error-404.png'
import { Icon } from 'astro-icon/components'
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center gap-7">
    <Image src={error} alt="404 page" width={250} height={250} class="mt-10" />
    <h1 class="text-5xl">
      Page Not Found
    </h1>
    <p class="text-2xl mb-10">
      Sorry, we couldn't find the page you're looking for
    </p>
    <a 
      href="/" 
      class="flex gap-2 items-center bg-gray-100 py-2 px-4 mb-6 border border-gray-300 rounded-md hover:bg-indigo-500 hover:text-white transition-colors duration-200"
    >
      Go Back Home
      <Icon name="mdi:home" size={20} />
    </a>
  </div>
</MainLayout>

